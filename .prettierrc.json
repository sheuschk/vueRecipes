{
    "$schema": "https://json.schemastore.org/prettierrc",
    "semi": false,
    "tabWidth": 2,
    "singleQuote": true,
    "printWidth": 160,
    "trailingComma": "none",
    "overrides": [
      {
        "files": "**/i18n/*.js",
        "options": {
          "printWidth": 9000
        }
      }
    ],
    "plugins": ["@trivago/prettier-plugin-sort-imports"],
    "importOrder": [
      "^[vue]",
      "<THIRD_PARTY_MODULES>",
      "^@/api(.*)$",
      "^@/assets(.*)$",
      "^@/components(.*)$",
      "^@/router(.*)$",
      "^@/stores(.*)$",
      "^@/views(.*)$"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true
  }
  